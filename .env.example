############################
# Story Clash Codex - Environment
############################

# Runtime
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Security / admin
SHARE_PROXY_SECRET=dev-share-secret-change-me
ADMIN_API_KEY=dev-admin-key-change-me
CRON_SECRET=dev-cron-secret-change-me

# Rate limits (requests per minute)
RATE_LIMIT_CREATE_ROOM_PER_MINUTE=8
RATE_LIMIT_JOIN_ROOM_PER_MINUTE=30
RATE_LIMIT_SHARE_PER_MINUTE=30
RATE_LIMIT_OG_PER_MINUTE=120

# Realtime transport mode:
# - socketio: local/custom Next server (default)
# - ws: Cloudflare Worker WebSocket backend
NEXT_PUBLIC_REALTIME_TRANSPORT=socketio
NEXT_PUBLIC_SOCKET_URL=
NEXT_PUBLIC_API_BASE_URL=
NEXT_PUBLIC_WS_BASE_URL=

# Observability
LOG_LEVEL=debug
PLAUSIBLE_DOMAIN=
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_ENVIRONMENT=local
SENTRY_TRACES_SAMPLE_RATE=0

# E2E controls
E2E_PORT=3100
RUN_LIVE_E2E=0
RUN_WORKER_E2E=0
